    "effect-errors": "1.10.15",
    "effect-octokit-layer": "1.13.1",
    "jsondiffpatch": "0.7.3",
    "picocolors": "1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
